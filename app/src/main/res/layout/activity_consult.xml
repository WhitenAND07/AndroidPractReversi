<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_db_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/DatabaseLog" />

    <fragment
        android:id="@+id/ListFrag"
        class="com.android.nilagut.practicareversi.Fragments.ListFragment"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="100" />


    <Button
        android:id="@+id/back_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/sortir"
        android:drawableStart="@drawable/sortir"
        android:onClick="onClick"
        android:text="@string/btnExit" />
</LinearLayout>